---
import { getCollection } from 'astro:content';
import Layout from '../../layouts/Layout.astro';

export async function getStaticPaths() {
  const docs = await getCollection('docs');
  return docs.map((doc) => ({
    params: { slug: doc.slug },
    props: { doc },
  }));
}

const { doc } = Astro.props;
const { Content } = await doc.render();
---

<Layout title={`${doc.data.title} - UOS 文档`}>
  <article class="doc-article">
    <header class="doc-header">
      <div class="container">
        <h1>{doc.data.title}</h1>
        <p class="doc-description">{doc.data.description}</p>
        <div class="doc-meta">
          <time datetime={doc.data.pubDate.toISOString()}>
            {doc.data.pubDate.toLocaleDateString('zh-CN')}
          </time>
        </div>
      </div>
    </header>

    <div class="doc-content">
      <div class="container">
        <Content />
      </div>
    </div>
  </article>
</Layout>

<style>
  .doc-article {
    min-height: 100vh;
  }

  .doc-header {
    background: var(--color-bg-light);
    padding: 3rem 0;
    border-bottom: 1px solid var(--color-border);
  }

  .container {
    max-width: 900px;
    margin: 0 auto;
    padding: 0 1rem;
  }

  .doc-header h1 {
    font-size: 2.5rem;
    font-weight: 700;
    color: #1a1a1a;
    margin: 0 0 1rem 0;
    line-height: 1.2;
  }

  .doc-description {
    font-size: 1.125rem;
    color: #4a5568;
    margin: 0 0 1.5rem 0;
    line-height: 1.6;
  }

  .doc-meta {
    display: flex;
    align-items: center;
    gap: 1rem;
    font-size: 0.875rem;
    color: #718096;
  }

  .doc-meta time {
    background: #edf2f7;
    padding: 0.25rem 0.5rem;
    border-radius: 4px;
  }

  .doc-content {
    padding: 3rem 0;
  }

  .doc-content :global(h1) {
    font-size: 2rem;
    font-weight: 700;
    color: #1a1a1a;
    margin: 2rem 0 1rem 0;
    padding-bottom: 0.5rem;
    border-bottom: 2px solid #e2e8f0;
  }

  .doc-content :global(h2) {
    font-size: 1.5rem;
    font-weight: 600;
    color: #2d3748;
    margin: 2rem 0 1rem 0;
    padding-bottom: 0.25rem;
    border-bottom: 1px solid #e2e8f0;
  }

  .doc-content :global(h3) {
    font-size: 1.25rem;
    font-weight: 600;
    color: #2d3748;
    margin: 1.5rem 0 0.75rem 0;
  }

  .doc-content :global(h4) {
    font-size: 1.125rem;
    font-weight: 600;
    color: #4a5568;
    margin: 1.25rem 0 0.5rem 0;
  }

  .doc-content :global(p) {
    color: #2d3748;
    line-height: 1.7;
    margin: 1rem 0;
  }

  .doc-content :global(ul),
  .doc-content :global(ol) {
    margin: 1rem 0;
    padding-left: 1.5rem;
  }

  .doc-content :global(li) {
    margin: 0.5rem 0;
    line-height: 1.6;
  }

  .doc-content :global(blockquote) {
    border-left: 4px solid var(--color-primary);
    background: #f7fafc;
    padding: 1rem 1.5rem;
    margin: 1.5rem 0;
    font-style: italic;
    color: #4a5568;
  }

  .doc-content :global(code) {
    background: #f8f9fa;
    padding: 0.125rem 0.25rem;
    border-radius: 3px;
    font-family: 'Monaco', 'Menlo', 'Ubuntu Mono', monospace;
    font-size: 0.875em;
    color: #2d3748;
  }

  .doc-content :global(pre) {
    border-radius: 8px;
    overflow-x: auto;
    margin: 1.5rem 0;
    font-family: 'Monaco', 'Menlo', 'Ubuntu Mono', monospace;
    font-size: 0.875rem;
    line-height: 1.5;
  }

  .doc-content :global(pre code) {
    background: none;
    padding: 0;
    color: inherit;
    font-size: inherit;
  }

  .doc-content :global(table) {
    width: 100%;
    border-collapse: collapse;
    margin: 1.5rem 0;
    font-size: 0.875rem;
  }

  .doc-content :global(th),
  .doc-content :global(td) {
    padding: 0.75rem;
    text-align: left;
    border-bottom: 1px solid #e2e8f0;
  }

  .doc-content :global(th) {
    background: #f7fafc;
    font-weight: 600;
    color: #2d3748;
  }

  .doc-content :global(tr:hover) {
    background: #f7fafc;
  }

  .doc-content :global(a) {
    color: var(--color-primary);
    text-decoration: none;
    border-bottom: 1px solid transparent;
    transition: border-color 0.2s ease;
  }

  .doc-content :global(a:hover) {
    border-bottom-color: var(--color-primary);
  }

  .doc-content :global(hr) {
    border: none;
    height: 1px;
    background: #e2e8f0;
    margin: 2rem 0;
  }

  @media (max-width: 768px) {
    .container {
      padding: 0 0.5rem;
    }

    .doc-header h1 {
      font-size: 2rem;
    }

    .doc-description {
      font-size: 1rem;
    }

    .doc-content :global(pre) {
      padding: 1rem;
      font-size: 0.8rem;
    }

    .doc-content :global(table) {
      font-size: 0.8rem;
    }

    .doc-content :global(th),
    .doc-content :global(td) {
      padding: 0.5rem;
    }
  }
</style>
