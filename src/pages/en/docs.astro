---
import Layout from '../../layouts/Layout.astro';
---

<Layout title="Docs - UOS">
  <section class="page-header">
    <div class="container">
      <h1>UOS Documentation</h1>
      <p class="subtitle">Project overview, architecture and usage (coming soon)</p>
    </div>
  </section>

  <section class="section">
    <div class="container">
      <div class="content">
        <h2>Contents</h2>
        <ul class="doc-list">
          <li>Introduction</li>
          <li>Architecture</li>
          <li>Modules</li>
          <li>Standards & Interfaces</li>
          <li>Examples & Cases</li>
        </ul>
        <p class="note">More content will be added gradually. Stay tuned.</p>
      </div>
    </div>
  </section>
</Layout>

<style>
  .page-header {
    background: var(--color-bg-light);
    padding: 3rem 0;
    border-bottom: 1px solid var(--color-border);
    text-align: center;
  }

  .subtitle {
    color: var(--color-text-light);
    margin-top: 0.5rem;
  }

  .content {
    max-width: 900px;
    margin: 0 auto;
  }

  .doc-list {
    margin: 0 0 1rem 1.25rem;
    list-style: disc;
  }

  .note {
    color: var(--color-text-light);
  }
</style>


