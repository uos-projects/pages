---
import { getCollection } from 'astro:content';
import Layout from '../../../layouts/Layout.astro';
import { useTranslations } from '../../../config';

const t = useTranslations('en');

const allNews = await getCollection('news', ({ data }) => {
  return data.lang === 'en';
});

const sortedNews = allNews.sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());
---

<Layout title="News - UROS">
  <section class="page-header">
    <div class="container">
      <h1>{t('news.title')}</h1>
    </div>
  </section>

  <section class="section">
    <div class="container">
      <div class="news-grid">
        {sortedNews.map((news) => (
          <article class="news-card card">
            <div class="news-date">
              {news.data.pubDate.toLocaleDateString('en-US', {
                year: 'numeric',
                month: 'long',
                day: 'numeric'
              })}
            </div>
            <h2 class="news-title">
              <a href={`/en/news/${news.slug}`}>{news.data.title}</a>
            </h2>
            <p class="news-description">{news.data.description}</p>
            <a href={`/en/news/${news.slug}`} class="read-more">
              {t('news.read_more')} â†’
            </a>
          </article>
        ))}
      </div>
    </div>
  </section>
</Layout>

<style>
  .page-header {
    background: var(--color-bg-light);
    padding: 3rem 0;
    border-bottom: 1px solid var(--color-border);
  }

  .page-header h1 {
    text-align: center;
    color: var(--color-text);
  }

  .news-grid {
    display: grid;
    gap: 2rem;
    max-width: 900px;
    margin: 0 auto;
  }

  .news-card {
    transition: transform 0.2s, box-shadow 0.2s;
  }

  .news-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1);
  }

  .news-date {
    color: var(--color-text-light);
    font-size: 0.9rem;
    margin-bottom: 0.75rem;
  }

  .news-title {
    margin-bottom: 1rem;
  }

  .news-title a {
    color: var(--color-text);
    text-decoration: none;
    transition: color 0.2s;
  }

  .news-title a:hover {
    color: var(--color-primary);
  }

  .news-description {
    color: var(--color-text-light);
    line-height: 1.7;
    margin-bottom: 1.5rem;
  }

  .read-more {
    color: var(--color-primary);
    font-weight: 500;
    display: inline-flex;
    align-items: center;
    gap: 0.25rem;
  }
</style>

